model Message {
  id         String @id @default(uuid())
  message    String
  sender     User   @relation(name: "send_messages", fields: [senderId], references: [sub])
  senderId   String
  receiver   User   @relation(name: "received_messages", fields: [receiverId], references: [sub])
  receiverId String

  @@map("messages")
}

model User {
  sub              String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String
  sentMessages     Message[] @relation(name: "send_messages")
  receivedMessages Message[] @relation(name: "received_messages")

  @@map("users")
}

